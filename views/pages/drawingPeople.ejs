<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

<% include ../partials/nav.ejs %>

<div class="container">
<h2>Main Display</h2>
    <% i = 0 %>
    <% rows.forEach(function(r) { %>
        <% i+= r.height*10 + 30%>
        <svg width="<%= (r.size/r.height*20) %>" height="<%= (r.height*10)%>">
          <rect width="<%= r.size/r.height*20 %>" height="<%= r.height*10 %>" style="fill:rgb(0,0,255);stroke-width:3;stroke:rgb(0,0,0)" id  = "<%= r.name %>" onclick = "window.alert('<%= r.name %>,<%= r.size %>,<%= r.height %>,<%= r.type %>')"></rect>
          <text x="10" y=45% font-family="Roboto" text-align = "center"  font-size="12" fill="#111111">  <%= r.name %>  </text>
          Sorry, your browser does not support inline SVG.
        </svg>
    <% }); %>

</div>
<div class="container">

    <select name="people" id="people">
      <% rows.forEach(function(r) { %>
        <option value="<%= r.name %>"><%= r.name %></option>
      <% }); %>
    </ select>
</div>


  <form class = "" action="/deletebyname" method ="post">
    <select name="people" id="people">
      <option value="Name">Name</option>

    </ select>
    <input type ="text" name="deletebyname" value ="" placeholder="Delete person by name" id = 'Name' >
    <input type ="submit" name="sub" value = "Search and delete matching entries"><br>
  </form>
  <form class = "" action="/deletebysize" method ="post">
    <input type ="number" name="deletebysize" value ="" placeholder="Delete person by size" id = 'Size' >
    <input type ="submit" name="sub" value = "Search and delete matching entries"><br>
  </form>
  <form class = "" action="/deletebyheight" method ="post">
    <input type ="number" name="deletebyheight" value ="" placeholder="Delete person by height" id = 'Height' >
    <input type ="submit" name="sub" value = "Search and delete matching entries"><br>
  </form>
  <form class = "" action="/deletebytype" method ="post">
    <input type ="text" name="deletebytype" value ="" placeholder="Delete person by type" id = 'Name' >
    <input type ="submit" name="sub" value = "Search and delete matching entries"><br>
  </form>

</body>
</html>
